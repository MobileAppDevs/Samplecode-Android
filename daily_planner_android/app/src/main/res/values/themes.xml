<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DailyPlanner" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_25282B</item>
        <item name="colorPrimaryVariant">@color/color_25282B</item>
        <item name="colorOnPrimary">@color/color_25282B</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_25282B</item>
        <item name="colorSecondaryVariant">@color/color_25282B </item>
        <item name="colorOnSecondary">@color/color_25282B</item>
    </style>
    <style name="checkBoxTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.DailyPlanner" parent="Base.Theme.DailyPlanner" />
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/color_25282B</item>
        <item name="colorPrimary">@color/color_25282B</item>
        <item name="colorSecondary">@color/color_25282B</item>
        <item name="colorSecondaryVariant">@color/color_25282B</item>
        <item name="colorPrimaryDark">@color/color_25282B</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/color_bg</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.DailyPlanner</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/color_D3F26A</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg</item>
    </style>
    <style name="DatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <!-- Customize other DatePicker attributes if needed -->
        <item name="android:headerBackground">@drawable/gradient_bg</item>

    </style>
    <style name="TimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize other DatePicker attributes if needed -->
        <item name="android:headerBackground">@drawable/gradient_bg</item>
        <item name="android:textColorPrimary">@color/color_25282B</item>
        <item name="android:textColor">@color/color_25282B</item>
        <item name="android:headerTimeTextAppearance">@color/color_25282B</item>
    </style>
    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">@color/color_25282B</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>
    <style name="SpinnerThemeWithoutUnderLine" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/color_25282B</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>
    <style name="RoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="checkboxMood">
        <item name="buttonTint">@color/color_8DB700</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="checkboxHealth">
        <item name="buttonTint">@color/color_B21F14</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="checkboxProductivity">
        <item name="buttonTint">@color/color_C28F02</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>
    <style name="SplashTheme" parent="Base.Theme.DailyPlanner" >
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
</resources>