<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/parentLayout"
        android:minWidth="300dp"
        android:background="@color/white"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/tabHeader"
            android:orientation="horizontal">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llDate"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="12sp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/color_25282B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATE"/>
                <View
                    android:id="@+id/ViewDateLine"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:visibility="visible"
                    android:background="@color/color_25282B"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tvTime"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:textSize="12sp"
                android:paddingVertical="10dp"
                android:textColor="@color/color_25282B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIME"/>
                <View
                    android:id="@+id/ViewTimeLine"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:visibility="invisible"
                    android:background="@color/color_25282B"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabHeader"
            android:orientation="vertical"
            android:id="@+id/tabContent">
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_height="match_parent"
                android:calendarTextColor="@color/color_25282B"
                style="@style/DatePickerStyle"/>
            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:headerBackground="@drawable/gradient_bg"
                android:visibility="gone"
                android:headerTimeTextAppearance="@style/Theme.Material3.Dark"
                android:numbersBackgroundColor="#F6F6EF"
                android:numbersSelectorColor="@color/color_25282B"
                android:theme="@style/TimePickerStyle"
                android:descendantFocusability="blocksDescendants"
                android:timePickerMode="clock"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tabContent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:minWidth="100dp"
                android:fontFamily="@font/inter_semibold"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="@color/color_25282B"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel" />
            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="100dp"
                android:fontFamily="@font/inter_semibold"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/color_25282B"
                android:background="@android:color/transparent"
                android:text="@string/save" />


        </LinearLayout>
    </RelativeLayout>
</layout>


