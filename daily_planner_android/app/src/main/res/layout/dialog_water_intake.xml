<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/color_bg"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/ibBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_back"
                            android:padding="10dp"
                            android:background="@android:color/transparent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/water_tracker"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:textColor="@color/color_25282B"
                            android:fontFamily="@font/inter_semibold"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        android:layout_marginHorizontal="27dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_water"
                            android:layout_marginEnd="20dp"
                            android:padding="10dp"
                            android:background="@android:color/transparent"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/glass"
                                android:textSize="18sp"
                                android:layout_gravity="center"
                                android:textColor="@color/color_25282B"
                                android:fontFamily="@font/inter_medium"/>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="26dp"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageButton
                                    android:id="@+id/ibDecrement"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_minus"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:background="@android:color/transparent"/>
                                <TextView
                                    android:id="@+id/tvCount"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="06"
                                    android:textSize="32sp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textColor="@color/color_25282B"
                                    android:fontFamily="@font/inter_semibold"/>
                                <ImageButton
                                    android:id="@+id/ibIncrement"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_plus"
                                    android:scaleType="fitXY"
                                    android:background="@android:color/transparent"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:itemCount="7"
                        android:layout_gravity="center"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_water_intake_date">

                    </androidx.recyclerview.widget.RecyclerView>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="27dp"
                    android:background="@color/color_25282B"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="14sp"
                        android:layout_marginTop="20dp"
                        android:text="@string/today_consumption"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:background="@drawable/circular_shape"
                                    android:indeterminate="false"
                                    android:min="0"
                                    android:max="12"
                                    android:progressDrawable="@drawable/circular_progress_bar1_4"
                                    android:textAlignment="center" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:background="@drawable/bg_str1_cf6f6ef"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="75dp"
                                android:layout_height="75dp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvGlass"
                                android:lineSpacingMultiplier="1.25"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/color_25282B"
                                android:fontFamily="@font/inter_semibold"
                                app:layout_constraintTop_toTopOf="@+id/progressBar"
                                app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                                app:layout_constraintStart_toStartOf="@+id/progressBar"
                                app:layout_constraintEnd_toEndOf="@+id/progressBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                           <androidx.appcompat.widget.LinearLayoutCompat
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="20dp"
                               android:layout_gravity="center_horizontal"
                               android:orientation="horizontal">
                               <com.google.android.material.imageview.ShapeableImageView
                                   android:layout_width="20dp"
                                   android:layout_height="14dp"
                                   android:layout_gravity="center"
                                   android:adjustViewBounds="true"
                                   android:scaleType="centerCrop"
                                   android:src="@color/color_FF8A04"
                                   app:shapeAppearance="@style/CornerSize2dp" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:ellipsize="end"
                                   android:fontFamily="@font/inter_medium"
                                   android:maxWidth="121dp"
                                   android:layout_gravity="center_vertical"
                                   android:text="1-4"
                                   android:layout_marginHorizontal="10dp"
                                   android:textColor="@color/white"
                                   android:textSize="14sp"
                                   app:layout_constraintTop_toBottomOf="parent"
                                   />
                           </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="20dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:layout_marginStart="1dp"
                                    android:src="@color/color_BFE61A"
                                    app:shapeAppearance="@style/CornerSize2dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/inter_medium"
                                    android:maxWidth="121dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="5-8"
                                    android:layout_marginHorizontal="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    app:layout_constraintTop_toBottomOf="parent"
                                    />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="horizontal">
                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="20dp"
                                        android:layout_height="14dp"
                                        android:layout_gravity="center"
                                        android:adjustViewBounds="true"
                                        android:layout_marginStart="9dp"
                                        android:scaleType="centerCrop"
                                        android:src="@color/color_65FF00"
                                        app:shapeAppearance="@style/CornerSize2dp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/inter_medium"
                                        android:maxWidth="121dp"
                                        android:layout_gravity="center_vertical"
                                        android:text="9-12"
                                        android:layout_marginHorizontal="10dp"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        app:layout_constraintTop_toBottomOf="parent"
                                        />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                        android:id="@+id/btnDone"
                        android:layout_width="230dp"
                        android:layout_height="44dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/btn_bg"
                        android:backgroundTint="@color/color_E1FF63"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/done"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="false"
                        android:textColor="@color/color_25282B"
                        android:textSize="14sp"
                        android:layout_marginBottom="30dp"
                        app:initialCornerAngle="22dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvForgotPassword"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
