<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:scaleType="fitXY"
        android:src="@drawable/ic_cancel" />



            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_crown" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="Your Subscription"
                android:textAllCaps="true"
                android:textColor="@color/color_25282B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPlanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/color_25282B"
                android:text="Active"
                android:textSize="14sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llMonthlySubscription"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/task_bg"
                android:backgroundTint="@color/color_25282B"
                android:elevation="1dp"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:singleLine="true"
                    android:text="Monthly"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPriceMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/task_green_bg"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:text="@string/one_month_price"
                    android:textColor="@color/color_25282B"
                    android:textSize="12sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llYearlySubscription"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/task_bg"
                android:backgroundTint="@color/color_25282B"
                android:elevation="1dp"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:singleLine="true"
                    android:text="Yearly"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPriceYearly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/task_green_bg"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:text="@string/one_year_price"
                    android:textColor="@color/color_25282B"
                    android:textSize="12sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/tvNextDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/inter_medium"
                android:text="Next billing date: Jan 23, 2024"
                android:textColor="@color/color_25282B"
                android:textSize="14sp" />

            <View
                android:id="@+id/viewSpaceTop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/btnSubscribeNow"
                android:layout_width="230dp"
                android:layout_height="44dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="17dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@color/btn_enable_disable"
                android:fontFamily="@font/inter_semibold"
                android:text="Subscribe Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:initialCornerAngle="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvForgotPassword"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="4dp" />

            <TextView
                android:id="@+id/tvBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/color_85857F"
                android:textSize="11sp"
                android:lineHeight="16dp"
                android:layout_marginBottom="30dp"
                android:text="@string/sub_bottom_desc"/>

</androidx.appcompat.widget.LinearLayoutCompat>
