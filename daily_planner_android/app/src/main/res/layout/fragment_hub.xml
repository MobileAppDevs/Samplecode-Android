<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:animateLayoutChanges="true"
        tools:context=".ui.fragment.HubFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_marginTop="45dp">

                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="start"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/welcome_back_with_comma"
                        android:textColor="@color/color_9EA0A2"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:maxWidth="150dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:text="Hello, User!"
                        android:textColor="@color/color_25282B"
                        android:textSize="20sp"
                        android:visibility="visible" />
                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginVertical="8dp"
                    android:singleLine="true"
                    android:visibility="invisible"
                    android:elevation="10dp"
                    android:layout_toStartOf="@+id/constraintLayout"
                    android:layout_toEndOf="@+id/llName"
                    android:background="@drawable/upgrade_btn_bg"
                    android:drawableStart="@drawable/ic_crown"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="10dp"
                    android:text="@string/upgrade"
                    android:textColor="@color/color_25282B" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:paddingStart="3dp"
                        android:paddingBottom="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder_img"
                        android:transitionName="Robot"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/CornerSize50Percent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivPremium"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/white"
                        android:elevation="2dp"
                        android:src="@drawable/ic_circle_crown"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
                        app:layout_constraintStart_toStartOf="@+id/ivProfile"
                        app:shapeAppearance="@style/CornerSize50Percent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_weight="1">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="34dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_marginTop="34dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_semibold"
                            android:maxWidth="121dp"
                            android:text="@string/tasks"
                            android:textColor="@color/color_25282B"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="parent" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_weight="1" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp">

                            <Spinner
                                android:id="@+id/spinner"
                                style="@style/SpinnerTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="10dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="-10dp"
                                android:layout_marginBottom="33dp"
                                android:maxWidth="112dp"
                                android:overlapAnchor="false"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/tvSpinnerText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:background="@drawable/upgrade_btn_bg"
                                android:drawableEnd="@drawable/ic_down"
                                android:drawableTint="@color/color_25282B"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/inter_semibold"
                                android:gravity="center"
                                android:minWidth="112dp"
                                android:paddingHorizontal="5dp"
                                android:paddingVertical="5dp"
                                android:text="@string/this_week"
                                android:textColor="@color/color_25282B"
                                android:textSize="12sp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crdTask"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="18dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="29dp"
                                    android:background="@drawable/task_list_btn_bg"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/inter_bold"
                                    android:gravity="center"
                                    android:paddingHorizontal="10dp"
                                    android:text="@string/task_list"
                                    android:textColor="@color/color_25282B"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:background="@drawable/upgrade_btn_bg"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:text="@string/total_tasks"
                                    android:textColor="@color/color_25282B"

                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvTaskCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="29dp"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:text="00/00"
                                    android:textColor="@color/color_25282B"
                                    android:textSize="12sp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crdCall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="18dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="29dp"
                                    android:background="@drawable/call_email_btn_bg"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/inter_bold"
                                    android:gravity="center"
                                    android:paddingHorizontal="10dp"
                                    android:text="@string/calls_emails"
                                    android:textColor="@color/color_25282B"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:background="@drawable/upgrade_btn_bg"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:text="@string/total_calls_emails"
                                    android:textColor="@color/color_25282B"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvCallEmailCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="29dp"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:text="00/00"
                                    android:textColor="@color/color_25282B"
                                    android:textSize="12sp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <LinearLayout
                        android:id="@+id/llToday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_marginTop="25dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_semibold"
                            android:maxWidth="121dp"
                            android:text="@string/today_no_comma"
                            android:textColor="@color/color_25282B"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="parent" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvViewAll"
                            android:layout_width="wrap_content"
                            android:layout_height="29dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="14dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/inter_semibold"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:text="@string/view_all"
                            android:textColor="@color/color_25282B"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTodayTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingTop="10dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_task" />

                    <TextView
                        android:id="@+id/tvNoTaskFound2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginVertical="20dp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:text="No Tasks Found"
                        android:textColor="@color/color_25282B"
                        android:textSize="12sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardWaterTracker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="18dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="22dp"
                                android:layout_marginTop="22dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/inter_semibold"
                                    android:maxWidth="121dp"
                                    android:text="@string/water_traker"
                                    android:textColor="@color/color_25282B"
                                    android:textSize="16sp"
                                    app:layout_constraintTop_toBottomOf="parent" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginStart="21dp"
                                    android:src="@drawable/ic_water" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="29dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/call_email_btn_bg"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="10dp"
                                    android:text="@string/this_week"
                                    android:textColor="@color/color_25282B"
                                    android:textSize="12sp" />

                            </LinearLayout>

<!--                            <com.github.mikephil.charting.charts.BarChart-->
<!--                                android:id="@+id/idBarChart"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="150dp"-->
<!--                                android:layout_marginHorizontal="22dp"-->
<!--                                android:layout_marginTop="12dp" />-->
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:orientation="horizontal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:paddingEnd="10dp"
                                    android:layout_weight="0.3"
                                    android:paddingBottom="10dp">

                                    <TextView
                                        android:id="@+id/tvExcellent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textSize="14sp"
                                        android:gravity="center"
                                        android:fontFamily="@font/inter_medium"
                                        android:text="Excellent" />

                                    <TextView
                                        android:id="@+id/tvGood"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/inter_medium"
                                        android:text="Good" />

                                    <TextView
                                        android:id="@+id/tvPoor"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="bottom"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/inter_medium"
                                        android:text="Poor" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvBarGraph"
                                    android:layout_width="0dp"
                                    android:layout_height="150dp"
                                    android:layout_weight="0.7"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:ignore="MissingConstraints" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                                android:id="@+id/btnAddConsumption"
                                android:layout_width="230dp"
                                android:layout_height="44dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginVertical="20dp"
                                android:background="@drawable/btn_bg"
                                android:backgroundTint="@color/color_F6F6EF"
                                android:fontFamily="@font/inter_semibold"
                                android:text="@string/add_consumption"
                                android:textAllCaps="false"
                                android:textColor="@color/color_25282B"
                                android:textSize="14sp"
                                app:initialCornerAngle="22dp"
                                app:spinning_bar_color="@color/color_25282B"
                                app:spinning_bar_padding="6dp"
                                app:spinning_bar_width="4dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/color_25282B"
                                android:orientation="horizontal"
                                android:paddingHorizontal="22dp">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="20dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@color/color_FF8A04"
                                    app:shapeAppearance="@style/CornerSize2dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginHorizontal="10dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/inter_medium"
                                    android:maxWidth="121dp"
                                    android:text="1-4"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    app:layout_constraintTop_toBottomOf="parent" />

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="20dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@color/color_BFE61A"
                                    app:shapeAppearance="@style/CornerSize2dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginHorizontal="10dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/inter_medium"
                                    android:maxWidth="121dp"
                                    android:text="5-8"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    app:layout_constraintTop_toBottomOf="parent" />

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="20dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@color/color_65FF00"
                                    app:shapeAppearance="@style/CornerSize2dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginHorizontal="10dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/inter_medium"
                                    android:maxWidth="121dp"
                                    android:text="9-12"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    app:layout_constraintTop_toBottomOf="parent" />
                            </LinearLayout>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRateYourDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="18dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="22dp"
                                android:layout_marginTop="22dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/inter_semibold"
                                    android:maxWidth="121dp"
                                    android:text="@string/know_your_day"
                                    android:textColor="@color/color_25282B"
                                    android:textSize="16sp"
                                    app:layout_constraintTop_toBottomOf="parent" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="29dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/call_email_btn_bg"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/inter_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="10dp"
                                    android:text="@string/this_week"
                                    android:textColor="@color/color_25282B"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter_medium"
                                android:maxWidth="121dp"
                                android:text="@string/_1_jun_to_07_jun"
                                android:textColor="@color/color_9EA0A2"
                                android:textSize="12sp" />
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <com.google.android.material.tabs.TabLayout
                                    android:id="@+id/tabLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:tabTextColor="@color/color_9EA0A2"
                                    android:background="@drawable/bordered_bottom"
                                    android:backgroundTint="@color/color_9EA0A2"
                                    app:tabSelectedTextColor="@color/color_25282B"
                                    app:layout_constraintBottom_toTopOf="@+id/viewPager"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" >
                                </com.google.android.material.tabs.TabLayout>

                                <androidx.viewpager.widget.ViewPager
                                    android:id="@+id/viewPager"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_marginStart="1dp"
                                    android:layout_marginEnd="1dp"
                                    android:visibility="invisible"
                                    android:layout_marginBottom="1dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:animateLayoutChanges="true"
                                    app:layout_constraintBottom_toBottomOf="@+id/viewPager"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tabLayout">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:paddingEnd="30dp"
                                        android:animateLayoutChanges="true"
                                        android:layout_weight=".3"
                                        android:paddingBottom="10dp">

                                        <TextView
                                            android:id="@+id/tvExcellentLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/inter_medium"
                                            android:gravity="top"
                                            android:text="Excellent"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/tvGoodLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/inter_medium"
                                            android:gravity="top"
                                            android:text="Good"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/tvPoorLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/inter_medium"
                                            android:gravity="top"
                                            android:text="Poor"
                                            android:textSize="14sp" />
                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvBarGraph2"
                                        android:layout_width="0dp"
                                        android:layout_height="150dp"
                                        android:layout_weight=".7"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:ignore="MissingConstraints" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </androidx.constraintlayout.widget.ConstraintLayout>



                            <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                                android:id="@+id/btnRateYourDay"
                                android:layout_width="230dp"
                                android:layout_height="44dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="25dp"
                                android:background="@drawable/btn_bg"
                                android:backgroundTint="@color/color_F6F6EF"
                                android:fontFamily="@font/inter_semibold"
                                android:text="@string/rate_your_day"
                                android:textAllCaps="false"
                                android:textColor="@color/color_25282B"
                                android:textSize="14sp"
                                app:initialCornerAngle="22dp"
                                app:spinning_bar_color="@color/color_25282B"
                                app:spinning_bar_padding="6dp"
                                app:spinning_bar_width="4dp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </ScrollView>

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                android:visibility="gone"
                ads:adUnitId="@string/adUnitIdHubFragment"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

