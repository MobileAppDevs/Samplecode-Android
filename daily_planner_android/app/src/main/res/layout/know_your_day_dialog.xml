<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_F6F6EF"
        android:minWidth="335dp"
        app:cardCornerRadius="18dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="333dp"
            android:background="#FFFEF9"
            android:padding="20dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iVBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back"/>
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enhancing Health"
                    android:textSize="16sp"
                    android:textColor="@color/color_25282B"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:itemCount="7"
                android:layout_gravity="center"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_water_intake_date">

            </androidx.recyclerview.widget.RecyclerView>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How was your health today?"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/color_25282B"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/inter_medium"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/heart1"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_health"/>
                    <ImageView
                        android:id="@+id/heart2"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="10dp"
                        android:src="@drawable/ic_health"/>
                    <ImageView
                        android:id="@+id/heart3"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_health"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/inter_medium"/>
                <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                    android:id="@+id/btnNext1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/btn_bg_selector"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="52dp"
                    android:layout_marginStart="10dp"
                    app:initialCornerAngle="22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvForgotPassword"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    app:spinning_bar_width="4dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llProductivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How was your Productivity today?"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/inter_medium"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivStar1"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_start_rate"/>
                    <ImageView
                        android:id="@+id/ivStar2"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="10dp"
                        android:src="@drawable/ic_start_rate"/>
                    <ImageView
                        android:id="@+id/ivStar3"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_start_rate"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:id="@+id/tvDescription2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/inter_semibold"/>
                <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                    android:id="@+id/btnNext2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/btn_bg_selector"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="52dp"
                    android:layout_marginStart="10dp"
                    app:initialCornerAngle="22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvForgotPassword"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    app:spinning_bar_width="4dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How was your Mood today?"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/inter_medium"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/llAngry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivAngry"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mood_angry_icon_unselected"/>
                        <TextView
                            android:id="@+id/tvAngry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/angry"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/color_9EA0A2"
                            android:layout_marginStart="2dp"
                            android:layout_marginBottom="11dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/inter_semibold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llSad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivSad"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mood_sad_unselected_icon"/>
                        <TextView
                            android:id="@+id/tvSad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sad"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/color_9EA0A2"
                            android:layout_marginStart="2dp"
                            android:layout_marginBottom="11dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/inter_semibold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llHappy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivHappy"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mood_happy_icon_unselected"/>
                        <TextView
                            android:id="@+id/tvHappy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/happy"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/color_9EA0A2"
                            android:layout_marginStart="2dp"
                            android:layout_marginBottom="11dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/inter_semibold"/>
                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                    android:id="@+id/btnDone"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/btn_bg_selector"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/btn_2done"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="52dp"
                    android:layout_marginStart="10dp"
                    app:initialCornerAngle="22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvForgotPassword"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    app:spinning_bar_width="4dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</layout>
