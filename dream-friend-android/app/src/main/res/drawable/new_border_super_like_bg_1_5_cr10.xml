<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <!-- create gradient you want to use with the angle you want to use -->
        <shape android:shape="rectangle" >
            <corners android:radius="16dp"/>
            <gradient
                android:angle="90"
                android:endColor="#00C0FF"
                android:startColor="#5558FF" />
        </shape>
    </item>
    <!-- create the stroke for top, left, bottom and right with the dp you want -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <corners android:radius="16dp"/>
            <gradient
                android:angle="90"
                android:endColor="#EAF6FF"
                android:startColor="#ADDCFF" />
        </shape>
    </item>

</layer-list>