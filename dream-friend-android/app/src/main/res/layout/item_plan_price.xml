<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/plan_unselected_bg_rounded"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans_semi_bold"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/color_161616"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tvProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans_semi_bold"
            android:gravity="center"
            android:text="months"
            android:textColor="@color/color_161616"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/color_E4E4E4"
            android:fontFamily="@font/merriweather_sans_semi_bold"
            android:gravity="center"
            android:layout_marginHorizontal="3dp"
            android:paddingVertical="5dp"
            android:text="SAVE 62%"
            android:textAllCaps="true"
            android:textColor="@color/color_161616"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/merriweather_sans_semi_bold"
            android:gravity="center"
            android:text="rs 899.oo"
            android:textAllCaps="true"
            android:textColor="@color/color_161616"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPerMonthPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/merriweather_sans_semi_bold"
            android:gravity="center"
            android:text="or â‚¹149.83 each"
            android:textColor="@color/color_A4A4A4"
            android:textSize="12sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_rounded_border"
        android:backgroundTint="@color/color_161616"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="-10dp"
        android:text="POPULAR"
        android:paddingBottom="3dp"
        android:fontFamily="@font/merriweather_sans_regular"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/llPrice"
        app:layout_constraintStart_toStartOf="@+id/llPrice"
        app:layout_constraintTop_toTopOf="@+id/llPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>