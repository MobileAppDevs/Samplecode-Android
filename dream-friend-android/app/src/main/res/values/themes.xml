<resources>
    <!-- Base application theme. -->
    <style name="Theme.DatingApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themeTopYellow</item>
        <item name="colorPrimaryVariant">@color/themeTopYellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/themeBottomRed</item>
        <item name="colorSecondaryVariant">@color/themeBottomRed</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LoginTheme" parent="Theme.DatingApp">
        <item name="android:statusBarColor">@color/themeTopYellow</item>
    </style>
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_selection</item>
        <item name="android:textColor">@color/chip_text_color_selection</item>
    </style>
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg</item>
    </style>
</resources>